<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MyActivity">

    <com.dolphinwang.switchbutton.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cursor="@drawable/cursor"
        app:selectedBG="#fc5777"
        app:unselectedBG="#eeeeee"
        app:trackWidth="48dp"
        app:trackPadding="1dp"
        app:status="OFF"
        app:shadowXDiff="0dp"
        app:shadowYDiff="3dp"
        app:shadow="@drawable/switch_button_shadow"
        app:shadowExpand="3dp"
        app:moveDuration="50" />

    <com.dolphinwang.switchbutton.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cursor="@drawable/cursor"
        app:selectedBG="#fc5777"
        app:unselectedBG="#eeeeee"
        app:trackWidth="48dp"
        app:trackPadding="1dp"
        app:status="ON"
        app:shadowXDiff="0dp"
        app:shadowYDiff="3dp"
        app:shadow="@drawable/switch_button_shadow"
        app:shadowExpand="3dp"
        app:moveDuration="50" />

</LinearLayout>
